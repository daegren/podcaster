<%= form_for @podcast do |podcast_form| %>

  <div class="clearfix">
    <%= podcast_form.label :title %>
    <div class="input">
      <%= podcast_form.text_field :title %>
    </div>
  </div>
  <div class="clearfix">
    <%= podcast_form.label :subtitle %>
    <div class="input">
      <%= podcast_form.text_field :subtitle %>
    </div>
  </div>
  <div class="clearfix">
    <%= podcast_form.label :summary %>
    <div class="input">
      <%= podcast_form.text_area :summary %>
    </div>
  </div>
  <div class="actions btn-group">
    <%= podcast_form.submit "Create", :class => "btn" %>
    <%= link_to "Cancel", podcasts_path, :class => "btn" %>
  </div>
<% end %>
